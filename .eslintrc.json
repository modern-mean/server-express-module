{
  
  "parser": "typescript-eslint-parser",
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "no-multi-spaces": 2,
    "no-underscore-dangle": 0,
    "no-use-before-define": [1, "nofunc"],
    "no-unused-expressions": 0,
    "no-empty-class": 0,
    "object-curly-spacing": [2, "always"],
    "quotes": [1, "single"],
    "space-in-parens": [2, "never"],
    "semi": [2, "always"],
    //TODO: Remove these two when eslint typscript supports it
    "no-undef": 0,
    "no-unused-vars": 0
  },
  "env": {
    "node": true,
    "es6": true
  }
}